{
  "name": "redux-bolt",
  "version": "0.2.0",
  "description": "⚡️ Make your Redux actions real time using SocketIO",
  "main": "lib/index.js",
  "files": [
    "lib",
    "src"
  ],
  "scripts": {
    "test": "jest --forceExit",
    "lint": "eslint --env=node --ignore-pattern=*.test.js ./src",
    "lint:test": "eslint --env=jest ./src/**/*.test.js",
    "build": "babel src --out-dir lib --ignore '**/*.test.js'",
    "test:coverage": "jest --coverage",
    "test:report": "open ./coverage/lcov-report/index.html"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vvinhas/redux-bolt.git"
  },
  "keywords": [
    "realtime",
    "socket-io",
    "middleware",
    "redux"
  ],
  "author": "Vinicius Vinhas <vinicius.vinhas@gmail.com> (http://github.com/vvinhas)",
  "license": "MIT",
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.4",
    "@babel/plugin-transform-modules-commonjs": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.4.2",
    "cross-env": "^5.2.0",
    "eslint": "^5.16.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^9.0.1",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-standard": "^4.0.0",
    "jest": "^24.7.1",
    "redux": "^4.0.1"
  }
}
